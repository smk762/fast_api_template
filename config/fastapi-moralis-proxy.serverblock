# --- 
# https://sysadmin.pm/nginx-rate-limit/
# https://www.nginx.com/blog/rate-limiting-nginx/
# https://gist.github.com/ipmb/472da2a9071dd87e24d3
geo $limit {
 default 1;
 127.0.0.1 0;
}

map $limit $limit_key {
 0 "";
 1 $binary_remote_addr;
}

limit_req_zone $binary_remote_addr zone=SERVICE_api:10m rate=1r/s;

server {
    listen 80;
    server_name moralis-proxy.komodo.earth;
    location /.well-known {
        root /home/admin/fastapi;
    }
    location / {
    return 301 https://$server_name$request_uri;
    }
}

server {
  #listen 80;
  listen 443 ssl;
  server_name moralis-proxy.komodo.earth;
  ssl_certificate   /etc/letsencrypt/live/moralis-proxy.komodo.earth/fullchain.pem;
  ssl_certificate_key   /etc/letsencrypt/live/moralis-proxy.komodo.earth/privkey.pem;
  root /home/admin/fastapi;
  access_log /home/admin/logs/moralis-proxy.komodo.earth-access.log;
  error_log  /home/admin/logs/moralis-proxy.komodo.earth-error.log;
  location / {
    proxy_pass http://127.0.0.1:8077;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-For $remote_addr;
    # ip allow and deny rules
    # deny 23.152.0.13;
  }

   location /.well-known {
        # Note that a request for /.well-known/test.html will
        # look for /home/admin/fastapi/.well-known/test.html
        # and not /home/admin/fastapi/test.html
        root /home/admin/fastapi;
    }
}
# ---